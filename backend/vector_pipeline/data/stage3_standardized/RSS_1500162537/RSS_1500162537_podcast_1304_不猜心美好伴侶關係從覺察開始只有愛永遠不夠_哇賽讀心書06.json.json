      "language": "zh",
      "created_at": "2025-07-10T14:12:42.297687",
      "source_model": "text-embedding-ada-002",
      "tags": "[\"焦慮\", \"健康\", \"悲傷\", \"情緒\", \"認知治療\", \"憤怒\"]"
    },
    {
      "chunk_id": "854bc9e3-a50c-4df4-874d-bd559de9ba77",
      "chunk_index": 26,
      "episode_id": "68649edffe40e9e650cf1d43",
