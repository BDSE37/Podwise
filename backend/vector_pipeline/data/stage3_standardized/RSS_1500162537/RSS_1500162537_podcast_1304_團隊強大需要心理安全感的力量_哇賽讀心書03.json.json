      "tags": "[\"教育\", \"家庭\"]"
    },
    {
      "chunk_id": "2a231b9b-62f3-4ac8-b83d-039b51812e48",
      "chunk_index": 35,
      "episode_id": "68649edffe40e9e650cf1d9a",
