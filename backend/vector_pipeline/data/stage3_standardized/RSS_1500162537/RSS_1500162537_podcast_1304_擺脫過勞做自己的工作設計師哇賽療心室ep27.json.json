      "tags": "[\"教育\", \"勞動法律\", \"職涯發展\"]"
    },
    {
      "chunk_id": "75877ebe-93d4-4477-86d9-d6d23c24ef43",
      "chunk_index": 58,
      "episode_id": "68649edffe40e9e650cf1e1c",
      "podcast_id": "1304",
      "podcast_name": "",
      "author": "",
