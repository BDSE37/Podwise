      "duration": "",
      "published_date": "",
      "apple_rating": 0,
      "chunk_text": "可是我們實在不太適合",
      "embedding": [],
      "language": "zh",
      "created_at": "2025-07-10T14:43:09.866753",
      "source_model": "text-embedding-ada-002",
