      "language": "zh",
      "created_at": "2025-07-10T14:43:09.838104",
      "source_model": "text-embedding-ada-002",
      "tags": "[]"
    },
    {
      "chunk_id": "029103be-083a-4339-90f0-ab5eb329ca85",
      "chunk_index": 44,
      "episode_id": "68649edffe40e9e650cf1e1c",
