      "tags": "[\"情緒\", \"健康\", \"恐懼\"]"
    },
    {
      "chunk_id": "7b1f598f-9968-4606-b075-7d1d70ceff1d",
      "chunk_index": 33,
      "episode_id": "68649edffe40e9e650cf1e68",
      "podcast_id": "1304",
