      "tags": "[\"投資\", \"刑事法律\"]"
    },
    {
      "chunk_id": "451bae34-92de-49e2-9c75-0b756204b17f",
      "chunk_index": 25,
      "episode_id": "68649edffe40e9e650cf1d28",
      "podcast_id": "1304",
      "podcast_name": "",
