      "tags": "[\"民事法律\", \"投資\"]"
    },
    {
      "chunk_id": "56015642-6d95-46b7-b28d-c39b9addb641",
      "chunk_index": 26,
      "episode_id": "68649edffe40e9e650cf1d28",
      "podcast_id": "1304",
