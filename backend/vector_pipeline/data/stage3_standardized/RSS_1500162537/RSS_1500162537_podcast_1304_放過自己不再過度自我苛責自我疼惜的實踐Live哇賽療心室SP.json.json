      "tags": "[\"驚訝\", \"教育\"]"
    },
    {
      "chunk_id": "1b550309-5b80-4c37-91bb-228f945db0ac",
      "chunk_index": 21,
      "episode_id": "68649edffe40e9e650cf1e23",
