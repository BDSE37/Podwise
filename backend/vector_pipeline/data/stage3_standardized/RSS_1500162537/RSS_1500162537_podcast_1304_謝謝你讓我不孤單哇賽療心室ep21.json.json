      "language": "zh",
      "created_at": "2025-07-10T14:42:57.909644",
      "source_model": "text-embedding-ada-002",
      "tags": "[\"刑事法律\", \"家庭\", \"愛\"]"
    },
    {
      "chunk_id": "8780a567-52ba-4df4-a37c-e193b0c6cff8",
      "chunk_index": 37,
      "episode_id": "68649edffe40e9e650cf1ec2",
