      "language": "zh",
      "created_at": "2025-07-10T14:38:21.039625",
      "source_model": "text-embedding-ada-002",
      "tags": "[]"
    },
    {
      "chunk_id": "82299546-c40d-4423-82ba-0fe043219b7d",
      "chunk_index": 9,
      "episode_id": "68649edffe40e9e650cf1d8e",
