    {
      "chunk_id": "fbe6d447-cc53-4ef9-ba60-26c82a6e9d56",
      "chunk_index": 27,
      "episode_id": "68649edffe40e9e650cf1d8e",
      "podcast_id": "1304",
      "podcast_name": "",
      "author": "",
      "category": "",
      "episode_title": "哇賽療心室ep14一起來清理不理性的內疚",
      "duration": "",
      "published_date": "",
      "apple_rating": 0,
      "chunk_text": "請他試著問問自己在這件事情上面我有多少影響力的時候他就發現一個巴掌拍不響不全然是他的責任",
      "embedding": [],
