      "source_model": "text-embedding-ada-002",
      "tags": "[\"健康\"]"
    },
    {
      "chunk_id": "661c871c-3b6d-4503-ac06-1dae2a1d4367",
      "chunk_index": 12,
      "episode_id": "6867815154dac0f7fe97570a",
      "podcast_id": "1304",
