      "tags": "[\"個性\"]"
    },
    {
      "chunk_id": "909d6048-fde5-4de0-aa10-763ef632f752",
      "chunk_index": 19,
      "episode_id": "6867815154dac0f7fe9758b3",
      "podcast_id": "1304",
