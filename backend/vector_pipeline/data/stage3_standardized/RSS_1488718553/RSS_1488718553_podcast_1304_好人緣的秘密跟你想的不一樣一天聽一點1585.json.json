      "source_model": "text-embedding-ada-002",
      "tags": "[]"
    },
    {
      "chunk_id": "3fcc3095-1077-41e3-a959-8ced6b9cfc50",
      "chunk_index": 9,
      "episode_id": "6867815154dac0f7fe9758a9",
