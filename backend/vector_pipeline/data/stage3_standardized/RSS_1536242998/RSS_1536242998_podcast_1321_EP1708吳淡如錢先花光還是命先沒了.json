      "tags": "[\"時事\"]"
    },
    {
      "chunk_id": "69d6604d-0721-4c6a-bd97-41ff1a6d3300",
      "chunk_index": 33,
      "episode_id": "6860d9ad1a552e2cedaa8a8b",
      "podcast_id": "1321",
      "podcast_name": "",
