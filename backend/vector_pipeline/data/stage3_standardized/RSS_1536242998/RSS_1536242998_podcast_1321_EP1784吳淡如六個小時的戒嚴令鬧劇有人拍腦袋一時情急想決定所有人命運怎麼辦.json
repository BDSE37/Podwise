      "tags": "[\"時事\"]"
    },
    {
      "chunk_id": "44db2c37-c3fb-42ea-922d-d1acca850b55",
      "chunk_index": 35,
      "episode_id": "6860d9ad1a552e2cedaa8ad6",
      "podcast_id": "1321",
