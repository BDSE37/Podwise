      "language": "zh",
      "created_at": "2025-07-10T14:59:37.563943",
      "source_model": "text-embedding-ada-002",
      "tags": "[\"職涯\", \"家庭\"]"
    },
    {
      "chunk_id": "665514f3-27f0-4101-b760-dc96c4eab72d",
      "chunk_index": 11,
      "episode_id": "68637fe11508a79a77512620",
