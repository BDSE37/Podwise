      "language": "zh",
      "created_at": "2025-07-10T14:58:56.555999",
      "source_model": "text-embedding-ada-002",
      "tags": "[]"
    },
    {
      "chunk_id": "27bab8a0-4141-4005-b515-695b05f6d85a",
      "chunk_index": 28,
      "episode_id": "68637fe11508a79a775124eb",
