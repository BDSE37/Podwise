      "tags": "[\"意識\"]"
    },
    {
      "chunk_id": "d2b49bb5-1637-4149-acc5-4a202ff6fbe7",
      "chunk_index": 19,
      "episode_id": "68637fe11508a79a77512652",
      "podcast_id": "1304",
      "podcast_name": "",
