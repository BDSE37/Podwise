      "source_model": "text-embedding-ada-002",
      "tags": "[\"教育\", \"刑事法律\"]"
    },
    {
      "chunk_id": "63e838bb-f205-426f-9874-f6c4d6165076",
      "chunk_index": 22,
      "episode_id": "6860f7421a30c174287a38db",
