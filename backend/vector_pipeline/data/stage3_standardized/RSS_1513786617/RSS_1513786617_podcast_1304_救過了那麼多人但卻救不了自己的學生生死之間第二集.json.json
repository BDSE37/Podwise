      "language": "zh",
      "created_at": "2025-07-10T14:51:13.742741",
      "source_model": "text-embedding-ada-002",
      "tags": "[\"時事\"]"
    },
    {
      "chunk_id": "0a56c404-cedd-47b1-b6ca-071f8bbdafbe",
      "chunk_index": 49,
      "episode_id": "6860f7421a30c174287a38c2",
      "podcast_id": "1304",
