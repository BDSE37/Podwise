      "language": "zh",
      "created_at": "2025-07-10T14:51:13.740239",
      "source_model": "text-embedding-ada-002",
      "tags": "[\"家庭\", \"時事\"]"
    },
    {
      "chunk_id": "2d9e39cc-5199-49ae-8171-bf9e39abdf2c",
      "chunk_index": 48,
      "episode_id": "6860f7421a30c174287a38c2",
      "podcast_id": "1304",
