      "created_at": "2025-07-10T14:45:20.379683",
      "source_model": "text-embedding-ada-002",
      "tags": "[\"教育\", \"家庭\"]"
    },
    {
      "chunk_id": "48db704f-6fcf-495e-b1f6-59a08917deef",
      "chunk_index": 26,
      "episode_id": "6867815854dac0f7fe975c40",
      "podcast_id": "1304",
