      "tags": "[\"家庭\", \"教育\", \"健康\"]"
    },
    {
      "chunk_id": "4e736e0a-f743-4811-b271-126be569eeef",
      "chunk_index": 57,
      "episode_id": "6867815854dac0f7fe975cbf",
