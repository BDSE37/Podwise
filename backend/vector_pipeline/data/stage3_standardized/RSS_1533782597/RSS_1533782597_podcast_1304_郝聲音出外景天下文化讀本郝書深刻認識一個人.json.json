      "tags": "[]"
    },
    {
      "chunk_id": "3441e1e4-3884-47a1-8851-8dd7588ac7e2",
      "chunk_index": 47,
      "episode_id": "6867815854dac0f7fe975b17",
      "podcast_id": "1304",
