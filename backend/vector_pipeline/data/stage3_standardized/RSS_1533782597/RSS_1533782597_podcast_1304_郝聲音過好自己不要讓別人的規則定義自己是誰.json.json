      "created_at": "2025-07-10T14:46:14.049548",
      "source_model": "text-embedding-ada-002",
      "tags": "[\"健康\"]"
    },
    {
      "chunk_id": "666dfd30-c01e-44ff-a79b-2f8c862389c0",
      "chunk_index": 31,
      "episode_id": "6867815854dac0f7fe975ca8",
      "podcast_id": "1304",
