      "language": "zh",
      "created_at": "2025-07-10T14:46:14.044715",
      "source_model": "text-embedding-ada-002",
      "tags": "[]"
    },
    {
      "chunk_id": "3847a9e1-b278-4fb3-8b9e-59cd777b2dab",
      "chunk_index": 29,
      "episode_id": "6867815854dac0f7fe975ca8",
