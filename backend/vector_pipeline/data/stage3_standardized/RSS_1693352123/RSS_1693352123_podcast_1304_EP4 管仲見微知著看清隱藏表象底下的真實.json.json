      "language": "zh",
      "created_at": "2025-07-10T14:46:36.902123",
      "source_model": "text-embedding-ada-002",
      "tags": "[]"
    },
    {
      "chunk_id": "06729121-4819-4fd6-8796-a515ba71c111",
      "chunk_index": 8,
      "episode_id": "6860dd2dbb826d6ebef9da2c",
