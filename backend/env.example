# =============================================================================
# Podwise 後端環境配置範例
# 複製此檔案為 .env 並填入實際值
# =============================================================================

# =============================================================================
# 資料庫配置 (K8s 服務)
# =============================================================================

# PostgreSQL 配置
POSTGRES_HOST=postgres.podwise.svc.cluster.local
POSTGRES_PORT=5432
POSTGRES_DB=podcast
POSTGRES_USER=bdse37
POSTGRES_PASSWORD=111111
DATABASE_URL=postgresql://bdse37:111111@postgres.podwise.svc.cluster.local:5432/podcast

# MongoDB 配置
MONGO_HOST=mongodb.podwise.svc.cluster.local
MONGO_PORT=27017
MONGO_DB=podwise
MONGO_USER=bdse37
MONGO_PASSWORD=111111
MONGO_URI=mongodb://bdse37:111111@mongodb.podwise.svc.cluster.local:27017/podwise

# Milvus 配置 (worker3 docker container)
MILVUS_HOST=worker3
MILVUS_PORT=19530
MILVUS_COLLECTION=podwise_vectors

# MinIO 配置
MINIO_HOST=minio.podwise.svc.cluster.local
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false

# =============================================================================
# 服務配置 (本地 pod)
# =============================================================================

# RAG Pipeline
RAG_URL=http://localhost:8001
RAG_HOST=localhost
RAG_PORT=8001

# ML Pipeline
ML_URL=http://localhost:8002
ML_HOST=localhost
ML_PORT=8002

# TTS 服務
TTS_URL=http://localhost:8000
TTS_HOST=localhost
TTS_PORT=8000

# STT 服務
STT_URL=http://localhost:8003
STT_HOST=localhost
STT_PORT=8003

# Ollama 服務
OLLAMA_URL=http://localhost:11434
OLLAMA_HOST=localhost
OLLAMA_PORT=11434

# =============================================================================
# AI/ML 模型配置
# =============================================================================

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# Whisper 模型配置
WHISPER_MODEL=medium
WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=float32

# Langfuse 監控配置
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key
LANGFUSE_SECRET_KEY=your_langfuse_secret_key
LANGFUSE_HOST=https://cloud.langfuse.com

# =============================================================================
# 系統配置
# =============================================================================

# 日誌等級
LOG_LEVEL=INFO
DEBUG_MODE=false

# 應用程式配置
APP_NAME=podwise-backend
APP_VERSION=1.0.0
ENVIRONMENT=production

# 安全配置
SECRET_KEY=your_secret_key_here
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# 效能配置
# =============================================================================

# 資料庫連線池
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# 快取配置
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379

# =============================================================================
# 檔案處理配置
# =============================================================================

# 音訊處理
AUDIO_FORMAT=mp3
AUDIO_QUALITY=192k
MAX_AUDIO_DURATION=3600

# 檔案上傳
MAX_FILE_SIZE=100MB
UPLOAD_PATH=/tmp/uploads

# =============================================================================
# 監控配置
# =============================================================================

# Prometheus
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# 健康檢查
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5 